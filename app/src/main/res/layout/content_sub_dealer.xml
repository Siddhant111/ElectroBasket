<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SubDealer"
    android:background="@mipmap/mountain">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="WELCOME"
        android:textSize="50dp"
        android:textColor="#ffffff"
        android:gravity="center"/>
    <TextView
        android:id="@+id/name"
        android:layout_below="@id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:gravity="center"/>

    <Button
        android:id="@+id/viewprofile"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="216dp"
        android:background="@drawable/dealerbutton"
        android:text="View Profile"
        android:textColor="#ffffff"
        android:onClick="ViewPro"/>

    <Button
        android:id="@+id/viewstock"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="208dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/dealerbutton"
        android:text="View Stock"
        android:textColor="#ffffff"
        android:onClick="SubViewStock"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/retailgoods"
        android:layout_alignTop="@+id/viewstock"
        android:background="@drawable/dealerbutton"
        android:text="View Orders"
        android:textColor="#ffffff"
        android:onClick="SubViewOrder"/>

    <Button
        android:id="@+id/executivemap"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/dealerbutton"
        android:text="Executive Location"
        android:textColor="#ffffff"
        android:onClick="SubMapping"/>

    <Button
        android:id="@+id/placeorder"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/viewstock"
        android:layout_marginBottom="119dp"
        android:background="@drawable/dealerbutton"
        android:text="Place Order"
        android:textColor="#ffffff"
        android:onClick="PlaceOrder"/>

    <Button
        android:id="@+id/retailgoods"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/placeorder"
        android:layout_marginStart="16dp"
        android:background="@drawable/dealerbutton"
        android:text="View Retail Goods"
        android:textColor="#ffffff"
        android:onClick="Retail"/>


</RelativeLayout>