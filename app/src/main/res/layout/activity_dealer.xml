<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mountain"
    tools:context=".Dealer">
    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="WELCOME"
        android:textSize="50dp"
        android:textColor="#ffffff"
        android:gravity="center"/>
    <TextView
        android:id="@+id/name"
        android:layout_below="@id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:gravity="center"/>
    <Button
        android:id="@+id/viewprofile"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="175dp"
        android:background="@drawable/dealerbutton"
        android:text="View Profile"
        android:textColor="#ffffff"
        android:onClick="ViewProfile"/>

    <Button
        android:id="@+id/viewstock"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/viewprofile"
        android:layout_marginEnd="15dp"
        android:background="@drawable/dealerbutton"
        android:onClick="ViewStock"
        android:text="View Stock"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/vieworders"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/viewprofile"
        android:layout_centerVertical="true"
        android:background="@drawable/dealerbutton"
        android:text="View Orders"
        android:textColor="#ffffff"
        android:onClick="ViewOrders"/>

    <Button
        android:id="@+id/viewanalytics"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/viewprofile"
        android:layout_marginBottom="174dp"
        android:background="@drawable/dealerbutton"
        android:text="View Analytics"
        android:textColor="#ffffff"
        android:onClick="ViewAnalytics"/>

    <Button
        android:id="@+id/viewproject"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/viewstock"
        android:layout_alignTop="@+id/viewanalytics"
        android:background="@drawable/dealerbutton"
        android:onClick="Project"
        android:text="View Project Goods"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/executivemap"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/viewstock"
        android:layout_centerVertical="true"
        android:background="@drawable/dealerbutton"
        android:text="Executive Location"
        android:textColor="#ffffff"
        android:onClick="Mapping"/>



</RelativeLayout>
